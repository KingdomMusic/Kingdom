<h2>入荷画面</h2>

<%= form_for([:admin, @arrival]) do |f| %>

<h4>ジャケット編集</h4>
<%= f.attachment_field :jacket_image %>
<h4>アルバム名(商品名)</h4>
<%= f.text_field :product_name %>
<h4>入荷枚数</h4>
<%= f.number_field :arraival_count %>

<%= f.submit "入荷" %>

<% end %>

<%= link_to "商品一覧へ戻る", admin_products_path %>
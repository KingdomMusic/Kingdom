<h1>入荷履歴</h1>
<table class="table table-striped">
    <thead>
        <tr>
            <th>入荷日時</th>
            <th>商品名</th>
            <th>入荷枚数</th>
        </tr>
    </thead>
    <% @arrivals.each do |arrival| %>
    <% product = Product.with_discarded.find(arrival.product_id) %>
    <tbody>
        <tr>
            <th><%= arrival.arrival_date.strftime('%Y年%m月%d日') %></th>
            <th><%= product.product_name %></th>
            <th><%= arrival.arrival_count %></th>
        </tr>
    </tbody>
    <% end %>
</table>

<div id="product-index">
	<h1>商品一覧</h1>
	<% @products.each do |product| %>
	<table>
		<tr>
			<th><%= attachment_image_tag @product, :jacket_image, :fill, 120, 120, :class => 'img-circle', fallback: "no_image.jpg" %></th>
			<th>商品ID：<%= product.id %>
				商品名：<%= product.name %>
				アーティスト：<%= product.artists.name %>
				価格：<%= product.price %>
				在庫数：<%= product.stock %>
			</th>
			<td><%= link_to "詳細", admin_product_path(product) %> </td>
		</tr>
	</table>
	<% end %>
</div>